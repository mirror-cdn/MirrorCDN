@page "/make"
@page "/"
@inject NavigationManager navigationManager
<h1>链接伪装</h1>
<br />
<p>(头部请保留http://或https:// ， ...其实私有协议也是可以的)</p>
<center>
<br />
源链接：
<input @bind-value=@InputUrl style="width:50%;margin:8px" />
<br />
加密后：
<input @bind-value=@OutputUrl style="width:50%;margin:8px" />
<br />
<Button OnClick="@CreateUrl" Text="生成链接" Color="Color.Primary" />
<br />

</center>
@code{
    [Parameter]
    public string InputUrl { get; set; } = "";
    [Parameter]
    public string OutputUrl { get; set; } = ""; 
    public void CreateUrl()
    {
        if (string.IsNullOrEmpty(InputUrl)==false)
        {
          OutputUrl = "https://mirror-cdn.github.io/api?Url="+ Ext.StringToGZip(InputUrl);  
        }        
    }
} 